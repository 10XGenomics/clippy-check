{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}
